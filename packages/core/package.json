{
  "name": "@ts-dev-tools/core",
  "version": "1.1.2",
  "description": "JS dev tools Core",
  "keywords": [
    "linter",
    "prettier",
    "git-hooks"
  ],
  "author": "Emilien Escalle <emilien.escalle@escemi.com>",
  "homepage": "https://github.com/escemi-tech/ts-dev-tools",
  "license": "MIT",
  "bin": "dist/bin.js",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "/dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/escemi-tech/ts-dev-tools.git"
  },
  "scripts": {
    "start": "yarn link && tsc -w",
    "stop": "yarn unlink",
    "build": "tsc",
    "test": "jest",
    "test:coverage": "yarn test --coverage",
    "lint": "eslint \"lib/**/*.{ts,tsx}\"",
    "postinstall": "npm run build && node dist/bin install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "bugs": {
    "url": "https://github.com/escemi-tech/ts-dev-tools/issues"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "deepmerge": "^4.2.2",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^4.3.0",
    "import-sort-style-module": "^6.0.0",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2",
    "prettier-plugin-import-sort": "^0.0.6",
    "pretty-quick": "^3.1.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "jest": "^26.6.3",
    "pinst": "^2.0.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5",
    "yarn": "^1.22.10"
  },
  "eslintConfig": {
    "env": {
      "es2021": true,
      "jest/globals": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "jest",
      "@typescript-eslint"
    ],
    "rules": {}
  }
}
